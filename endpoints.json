      "comment_count": 0
    }
  },
  "GET /api/articles/:article_id": {
    "description": "Get an article by its id along with the number of comments it has",
    "queries": ["article_id"],
    "exampleResponse": {
      "article": {
        "author": "example_author",
        "title": "Example Title",
        "article_id": 1,
        "body": "Article content...",
        "topic": "example_topic",
        "created_at": "2023-01-01T00:00:00.000Z",
        "votes": 10,
        "article_img_url": "http://example.com/image.jpg",
        "comment_count": 5
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Get all comments on the given article_id",
    "queries": ["article_id"],
    "exampleResponse": [
      {
        "comment_id": 5,
        "votes": 0,
        "created_at": "2020-11-03T21:00:00.000Z",
        "author": "icellusedkars",
        "body": "I hate streaming noses",
        "article_id": 1
      },
      {
        "comment_id": 2,
        "votes": 14,
        "created_at": "2020-10-31T03:03:00.000Z",
        "author": "butter_bridge",
        "body": "The beautiful thing about treasure is that it exists. Got to find out what kind of sheets these are; not cotton, not rayon, silky",
        "article_id": 1
      }
    ]
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Post a comment to the given article_id",
    "queries": ["article_id", { "username": "butter_bridge", "body": "lol" }],
    "exampleResponse": {
      "article": {
        "comment_id": 19,
        "body": "lol.",
        "article_id": 7,
        "author": "butter_bridge",
        "votes": 0,
        "created_at": "2020-11-03T21:00:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Post a comment to the given article_id",
    "queries": ["article_id", { "inc_votes": 1 }],
    "exampleResponse": {
      "article": {
        "comment_id": 19,
        "body": "first comment lol.",
        "article_id": 7,
        "author": "butter_bridge",
        "votes": 2,
        "created_at": "2020-11-03T21:00:00.000Z"
      }
    }
  },
  "PATCH /api/comments/:comment_id": {
    "description": "increment/decrement the number of votes on a comment.",
    "queries": ["comment_id", { "inc_votes": 1 }],
    "exampleResponse": {
      "article": {
        "comment_id": 19,
        "body": "first comment lol.",
        "article_id": 7,
        "author": "butter_bridge",
        "votes": 1,
        "created_at": "2020-11-03T21:00:00.000Z"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes a comment by its id",
    "queries": ["comment_id"],
    "exampleResponse": {
      "msg": "Comment deleted"
    }
  },
